<div class="right_col" role="main">
    <div class="">
      <div class="clearfix"></div>
      <div class="row text-center">
        <div class="col-md-12 col-sm-12 ">
          <div class="x_panel">
            <div class="x_title">
              <h2>Admin Profile <small>Activity report</small></h2>
              <ul class="nav navbar-right panel_toolbox" id="contact-container">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="#">Settings 1</a>
                    </div>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <div class="col-md-12 col-sm-12">
                <div class="profile_img">
                  <div id="crop-avatar">
                    <!-- Current avatar -->
                    <img class="img-responsive avatar-view" src="/admin/production/images/user.png" alt="Avatar" title="Change the avatar">
                  </div>
                </div>
                <h3><%= userInfo.name %></h3>

                <ul class="list-unstyled user_data">
                <li><i class="fa fa-envelope user-profile-icon"></i> <%= userInfo.email %>
                </li>

                  <!-- <li><i class="fa fa-map-marker user-profile-icon"></i> San Francisco, California, USA
                  </li> -->

                  <li>
                    <i class="fa fa-briefcase user-profile-icon"></i> <%= userInfo.role %>
                  </li>

                  <!-- <li class="m-top-xs">
                    <i class="fa fa-external-link user-profile-icon"></i>
                    <a href="http://www.kimlabs.com/profile/" target="_blank">www.kimlabs.com</a>
                  </li> -->
                </ul>
                  <button class="btn btn-success text-white"><i class="fa fa-edit m-right-xs"></i> Edit Profile</button>
                  <br />
                  <button onclick="handleChangePassword()" class="btn btn-primary text-white"><i class="fa fa-edit m-right-xs"></i> Change Password</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



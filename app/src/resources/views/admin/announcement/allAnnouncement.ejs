<div class="right_col" role="main">
    <div class="">
      <div class="page-title">
        <div class="fa-hover col-md-3 col-sm-4">
          <a href="/api/admin/trash-announcement" style="color: red;">
            <h5><i class="fa fa-trash"></i> Manage Trash (<%= announcementDeletedCount %>)</h5>
          </a>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-md-12 col-sm-12 ">
          <div class="x_panel">
            <div class="x_title">
              <h2>Manage Announcement Table</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="#">Settings 1</a>
                    </div>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>

            <div class="x_content">
              <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action" id="datatable-buttons">
                  <thead>
                    <tr class="headings">
                      <th>
                        <input type="checkbox" id="check-all" class="flat">
                      </th>
                      <th class="column-title">Name</th>
                      <th class="column-title">Image</th>
                      <th class="column-title">Description</th>
                      <th class="column-title">Status</th>
                      <th class="column-title no-link last"><span class="nobr">Action</span>
                      </th>
                      <th class="bulk-actions" colspan="7">
                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                      </th>
                    </tr>
                  </thead>

                  <tbody>
                    
                  <% if(announcements.length > 0){
                    announcements.forEach(function(announcement) { %>
                      <tr class="even pointer">
                        <td class="a-center ">
                          <input type="checkbox" class="flat" name="table_records">
                        </td>
                        <td>
                          <%= announcement.name %>
                          <br />
                          <small>Created at: <%= moment(announcement.createdAt).format('DD-MM-YYYY HH:mm A') %></small>
                        </td>
                        <% if(announcement.image){ %>
                        <td><img class="h-40 mb-4 mx-auto" src="/uploads/announcements/<%= announcement.image %>" width="70" height="70" alt="announcement image"></td>
                        <% } else { %>
                        <td><img class="h-40 mb-4 mx-auto" src="/admin/img/announcement.png" width="70" height="70" alt="announcement image"></td>
                        <% } %>
                        <td class="truncate-description"><%= announcement.description %></td>
                        <td>
                          <% if(announcement.status === 'show'){ %>
                            <label>
                              <input type="checkbox" class="js-switch" data-state="<%= announcement.status %>" data-id="<%= announcement._id %>" checked /> 
                            </label>
                          <% } else { %>
                            <!-- <a href="" class="btn-update-status-announcement" data-state="<%= announcement.status %>" data-id="<%= announcement._id %>"><i class="fa fa-toggle-off" style="font-size: 20px; color: grey;"> Hide</i></a> -->
                            <label>
                              <input type="checkbox" class="js-switch" data-state="<%= announcement.status %>" data-id="<%= announcement._id %>" />
                            </label>
                          <% } %>
                        </td>
                        <td class=" last">
                            <a href="/api/admin/edit-announcement/<%= announcement._id %>" class="btn btn-info btn-sm btn-restore-delAnnouncement">
                                <i class="fa fa-edit"></i> <small>Edit</small>
                            </a>
                            <a href="#" class="btn btn-danger btn-sm"  onclick="confirmSoftDelAnnouncement('<%= announcement._id %>', event)">
                              <i class="fa fa-trash"></i> <small>Trash</small>
                            </a>
                        </td>
                      </tr>
                    <% })
                  }else{ %>
                    <tr class="even pointer text-center">
                      <td colspan="8" style="color: brown; font-weight: bold;"> No records found</td>
                    </tr>
                  <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>


  <script>
    function truncateDescriptionString() {
      const tableCells = document.querySelectorAll('td.truncate-description');
      tableCells.forEach((cell) => {
        const content = cell.textContent;
      if (content.length > 50) {
        const truncatedContent = content.substring(0, 50) + '...';
        cell.textContent = truncatedContent;
      }
      });
    }
    truncateDescriptionString();

    document.addEventListener('DOMContentLoaded', function(){
      let btnUpdateStatusAnn = $('.js-switch');

      $(document).on('change', '.js-switch', function(e){
        e.preventDefault();
        let id = $(this).data('id');
        let state = $(this).data('state');
        updateStateAnnouncement(id, state);
      });

      function updateStateAnnouncement(announcementId, state) {
        let currentState = state;
        axios.patch('/api/admin/update-state-announcement/' + announcementId + '?_method=PATCH', { status: currentState === 'hide' ? 'show' : 'hide' })
          .then(res => {
            if(res.status === 200){
              Swal.fire({
                icon: 'success',
                title: 'Successfully',
                text: res.data.message,
              });
            }
          })
          .catch(error => {
            Swal.fire({
              icon: 'error',
              title: 'Failed',
              text: 'Failed to update status',
            });
          })
      }
    });

     // xóa mềm announcement
     function confirmSoftDelAnnouncement(announcementId, event) {
      event.preventDefault();// Ngăn chặn hành vi mặc định của thẻ <a>

      Swal.fire({
        title: 'Move to trash',
        text: 'Do you want to move this item to the trash?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Move',
        cancelButtonText: 'Cancel',
      }).then((result) => {
        if (result.isConfirmed) {
          // Nếu người dùng xác nhận xóa
          axios.delete(`/api/admin/soft-delete-announcement/${announcementId}`)
            .then((response) => {
              // Xóa thành công
              if(response.status === 200){
                Swal.fire('Successfully', response.data.message, 'success')
                  .then(() => {
                  location.reload(); // Reload lại trang
                });
              } else {
                Swal.fire('Failed', 'Something went wrong!', 'error');
              }
            })
            .catch((error) => {
              // Xử lý lỗi khi xóa không thành công
              Swal.fire('Failed', 'Something went wrong!', 'error');
            });
        }
      });
    }
  </script>



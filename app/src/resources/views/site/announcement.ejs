<section class="events-section section-bg section-padding" id="announcement_list" style="background-color: white;">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                <h2>Thông báo</h2>
            </div>
            <% if(announcements.length > 0){
                announcements.forEach(function(announcement) { %>
                <div class="row custom-block mb-3">
                    <div class="col-lg-2 col-md-4 col-12 order-2 order-md-0 order-lg-0">
                        <div class="custom-block-date-wrap d-flex d-lg-block d-md-block align-items-center mt-3 mt-lg-0 mt-md-0">
                            <h6 class="custom-block-date mb-lg-1 mb-0 me-3 me-lg-0 me-md-0">24</h6>
                            
                            <strong class="text-white">Feb 2023</strong>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-8 col-12 order-1 order-lg-0">
                        <div class="custom-block-image-wrap">
                            <a href="#">
                                <img src="/admin/img/announcement.png" class="custom-block-image img-fluid" alt="announcementIMG">
                                <i class="custom-block-icon bi-link"></i>
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-6 col-12 order-3 order-lg-0">
                        <div class="custom-block-info mt-2 mt-lg-0">
                            <a href="#" class="events-title mb-3"><%= announcement.name %></a>

                            <p class="mb-0"><%= announcement.description %></p>

                            <div class="d-flex flex-wrap border-top mt-4 pt-3">

                                <!-- <div class="mb-4 mb-lg-0">
                                    <div class="d-flex flex-wrap align-items-center mb-1">
                                        <span class="custom-block-span">abcd:</span>

                                        <p class="mb-0">aaaaa</p>
                                    </div>

                                    <div class="d-flex flex-wrap align-items-center">
                                        <span class="custom-block-span">abcd:</span>

                                        <p class="mb-0">aaaaa</p>
                                    </div>
                                </div> -->

                                <div class="d-flex align-items-center ms-lg-auto">
                                    <a href="#" class="btn custom-btn">Chi tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
                <ul class="pagination justify-content-center">
                    <% if(hasPrevPage){ %>
                        <li class="page-item">
                            <a class="page-link"href="/announcement/?page=<%= prev %>#announcement_list"><%= offset %>Previous </a>
                        </li>
                    <% } %>
                    <% for(let i = 1; i <= pageTotal; i++){%>
                        <% if(i == currentPage){ %>
                            <li class="page-item active">
                                <a class="page-link" href="/announcement/?page=<%= i %>#announcement_list"><%= i %></a>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="/announcement/?page=<%= i %>#announcement_list"><%= i %></a>
                            </li>
                        <% } %>
                           
                    <% } %>
                    <% if(hasNextPage){ %>
                        <li class="page-item">
                            <a class="page-link" href="/announcement/?page=<%= next %>#announcement_list">Next</a>
                        </li>
                    <% } %>
                </ul>
            <% }else{ %>
                <div class="alert alert-warning text-center">
                    <strong>Thông báo!</strong> Hiện chưa có bất kỳ thông báo nào từ chúng tôi
                </div>
            <% } %>
        </div>
    </div>
</section>